extends layout
block content
    script(src="/js/file-check.js")
    div.well#form_add_ajax
        form.form-horizontal(method="POST",enctype="multipart/form-data")
            legend #{title}
            div.control-group
                label.control-label(for="url") 源代码
                div.controls
                    textarea(type="text",id="source",name="source",style="width:650px;height:400px") #{info}

            div.control-group
                label.control-label(for="url") 重新上传
                div.controls
                    input(type="file",name="html",id="file")
            div.control-group
                div.controls
                    input.btn.btn-primary(type="submit",value="修改")

